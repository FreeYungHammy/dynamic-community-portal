<%- include('../partials/header') %>

<header class="homepage">
    <h1>Welcome to the Community Portal</h1>
</header>

<section class="events-section">
    
        <span class="header-bg"><h2>Upcoming Events</h2></span>
        
<ul class = "event-list">
    <% events.forEach(event => {%>
        <li class = "event-card">
            <h3> <%= event.title %> </h3>
            <p> Date: <%= event.date %> 
                Location: <%= event.location%>
            </p>
            <img src="public/images/<%= event.image%>" alt="<%= event.title %> image" > <%#images folder needs to be added to public folder still %>
        </li>
    <%}
    ) %>
</ul>
</section>


<%- include('../partials/footer') %>